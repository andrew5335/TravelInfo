<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#fff"
                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnTravel"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ship"
                    android:onClick="onBtnTravelClicked"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="50dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="관광정보"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="bottom|right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="산? 바다? 도시?\n어디로 여행갈까?"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="16dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#fff"
                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnFest"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/firework"
                    android:onClick="onBtnFestClicked"
                    android:padding="0dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="공연정보"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#fff"
                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnStay"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/hotel"
                    android:onClick="onBtnStayClicked"
                    android:padding="0dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="숙박정보"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#fff"
                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnFood"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/food"
                    android:onClick="onBtnFoodClicked"
                    android:padding="0dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="맛집정보"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#fff"
                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnSport"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/paddle"
                    android:onClick="onBtnSportClicked"
                    android:padding="0dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="레포츠"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#fff"
                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnShop"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/shopping"
                    android:onClick="onBtnShopClicked"
                    android:padding="0dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="쇼핑"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#fff"
                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnCulture"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/books"
                    android:onClick="onBtnCultureClicked"
                    android:padding="0dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="문화시설"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#fff"
                card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnCourse"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/notebook"
                    android:onClick="onBtnCourseClicked"
                    android:padding="0dp"
                    android:text="여행코스"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="여행코스"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </HorizontalScrollView>

</LinearLayout>