<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#fff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/home_area"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:onClick="onHomeBtnClicked"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:onClick="onHomeBtnClicked"
            app:srcCompat="@mipmap/home_btn" />

        <TextView
            android:id="@+id/homeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onHomeBtnClicked"
            android:fontFamily="@font/utogothic"
            android:text="HOME"
            android:textColor="#000"
            android:textSize="9dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/guide_area"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:onClick="onGuideBtnClicked"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/guideBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:onClick="onGuideBtnClicked"
            app:srcCompat="@mipmap/guide_btn" />

        <TextView
            android:id="@+id/guideTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onGuideBtnClicked"
            android:fontFamily="@font/utogothic"
            android:text="GUIDE"
            android:textColor="#000"
            android:textSize="9dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_area"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:onClick="onSearchBtnClicked"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:onClick="onSearchBtnClicked"
            app:srcCompat="@mipmap/search_btn" />

        <TextView
            android:id="@+id/searchTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onSearchBtnClicked"
            android:fontFamily="@font/utogothic"
            android:text="SEARCH"
            android:textColor="#000"
            android:textSize="9dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_area"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:onClick="onInfoBtnClicked"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/infoBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:onClick="onInfoBtnClicked"
            app:srcCompat="@mipmap/info_btn" />

        <TextView
            android:id="@+id/infoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onInfoBtnClicked"
            android:fontFamily="@font/utogothic"
            android:text="MY INFO"
            android:textColor="#000"
            android:textSize="9dp" />
    </LinearLayout>

</LinearLayout>
