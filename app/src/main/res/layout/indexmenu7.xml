<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

        <android.support.v7.widget.CardView
            android:id="@+id/card7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#fff"
            card_view:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/btnCulture"
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="@dimen/indexmenu_height"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/books"
                    android:onClick="onBtnCultureClicked"
                    android:padding="0dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="@dimen/indexmenu_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/utogothic"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:text="문화시설"
                    android:textColor="#fff"
                    android:textColorHighlight="#000"
                    android:textSize="24dp" />
        </android.support.v7.widget.CardView>

</LinearLayout>