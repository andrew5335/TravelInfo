<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CityMainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <include
            android:id="@+id/logo"
            layout="@layout/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/city_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/citymain_btn_bg"
                        android:text="관광지"
                        android:textColor="#3a3a3a"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosanskr_regular_hestia"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/citymain_btn_bg"
                        android:text="관광지"
                        android:textColor="#3a3a3a"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosanskr_regular_hestia"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/citymain_btn_bg"
                        android:text="관광지"
                        android:textColor="#3a3a3a"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosanskr_regular_hestia"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/citymain_btn_bg"
                        android:text="관광지"
                        android:textColor="#3a3a3a"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosanskr_regular_hestia"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/citymain_btn_bg"
                        android:text="관광지"
                        android:textColor="#3a3a3a"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosanskr_regular_hestia"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/citymain_btn_bg"
                        android:text="관광지"
                        android:textColor="#3a3a3a"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosanskr_regular_hestia"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/citymain_btn_bg"
                        android:text="관광지"
                        android:textColor="#3a3a3a"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosanskr_regular_hestia"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/citymain_btn_bg"
                        android:text="관광지"
                        android:textColor="#3a3a3a"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosanskr_regular_hestia"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <include
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            layout="@layout/bottom_navigation"
            app:layout_behavior=".behavior.BottomNavigationBehavior"/>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>